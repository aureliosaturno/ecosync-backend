<!DOCTYPE html>
<html>
<head>
  <title>Dashboard - <%= device_id %></title>
</head>
<body>
  <h2>Dashboard do dispositivo: <%= device_id %></h2>
  <a href="/dashboard/download-zip">📦 Baixar todas as imagens (.zip)</a><br><br>

  <h3>📸 Fotos</h3>
  <% data.photos.forEach(photo => { %>
    <img src="/uploads/<%= device_id %>/photo/<%= photo.filename %>" width="120" style="margin:5px;">
  <% }); %>

  <h3>🎧 Áudios</h3>
  <% data.audios.forEach(audio => { %>
    <div>
      <audio controls src="/uploads/<%= device_id %>/audio/<%= audio.filename %>"></audio>
    </div>
  <% }); %>

  <h3>📍 Localizações</h3>
  <ul>
    <% data.locations.forEach(loc => { %>
      <li><a href="https://www.google.com/maps?q=<%= loc.latitude %>,<%= loc.longitude %>" target="_blank">
        Ver no mapa: <%= loc.latitude %>, <%= loc.longitude %></a>
      </li>
    <% }); %>
  </ul>

  <h3>📱 Uso de Aplicativos</h3>
  <ul>
    <% data.usagelogs.forEach(log => { %>
      <li><%= log.app_name %> - <%= log.duration %></li>
    <% }); %>
  </ul>
</body>
</html>
